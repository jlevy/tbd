{
  "name": "tbd-cli",
  "version": "0.1.0",
  "description": "Git-native issue tracking for AI agents and humans",
  "license": "MIT",
  "author": "Joshua Levy <joshua@cal.berkeley.edu> (https://github.com/jlevy)",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.mts",
      "default": "./dist/cli.mjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "tbd": "./dist/bin.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlevy/tbd.git",
    "directory": "packages/tbd-cli"
  },
  "homepage": "https://github.com/jlevy/tbd#readme",
  "bugs": {
    "url": "https://github.com/jlevy/tbd/issues"
  },
  "keywords": [
    "issue-tracker",
    "git",
    "cli",
    "ai-agents",
    "beads",
    "tickets",
    "markdown"
  ],
  "scripts": {
    "prebuild": "mkdir -p src/docs && cp ../../docs/tbd-docs.md src/docs/",
    "build": "tsdown && mkdir -p dist/docs && cp src/docs/tbd-docs.md dist/docs/ && node -e \"require('fs').copyFileSync('dist/bin.mjs','dist/tbd')\"",
    "dev": "tsdown --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage && tryscript run 'tests/**/*.tryscript.md' --coverage --coverage-dir coverage --coverage-reporter text --coverage-reporter json --coverage-reporter json-summary --coverage-reporter lcov --coverage-reporter html --coverage-monocart --merge-lcov coverage/lcov.info",
    "test:coverage:vitest": "vitest run --coverage",
    "test:coverage:cli": "tryscript run 'tests/**/*.tryscript.md' --coverage --coverage-dir coverage --coverage-monocart --merge-lcov coverage/lcov.info",
    "test:tryscript": "tryscript run 'tests/**/*.tryscript.md'",
    "test:tryscript:update": "tryscript run --update 'tests/**/*.tryscript.md'",
    "bench": "tsx scripts/benchmark.ts",
    "validate-import": "tsx scripts/validate-import.ts",
    "publint": "publint",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "atomically": "^2.1.0",
    "commander": "^14.0.2",
    "picocolors": "^1.1.1",
    "ulid": "^3.0.2",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@vitest/coverage-v8": "^2.1.9",
    "c8": "^10.1.3",
    "monocart-coverage-reports": "^2.12.9",
    "publint": "^0.3.16",
    "tryscript": "^0.1.5",
    "tsdown": "0.20.0-beta.3",
    "tsx": "^4.21.0",
    "vitest": "^2.1.9"
  }
}
