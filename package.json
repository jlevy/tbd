{
  "name": "tbd-workspace",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:check": "node packages/tbd/scripts/build-if-needed.mjs",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:coverage": "pnpm --filter get-tbd test:coverage",
    "publint": "pnpm -r publint",
    "format": "prettier --write --log-level warn . && pnpm format:md",
    "format:check": "prettier --check --log-level warn .",
    "format:md": "find README.md docs packages/tbd -name '*.md' -type f -not -path '*/dist/*' -not -path '*/node_modules/*' 2>/dev/null | xargs uvx flowmark@latest --auto",
    "lint": "eslint . --fix && pnpm typecheck && eslint . --max-warnings 0",
    "lint:check": "pnpm typecheck && eslint . --max-warnings 0",
    "precommit": "pnpm format && pnpm lint && pnpm build && pnpm test",
    "ci": "pnpm format:check && pnpm lint:check && pnpm build && pnpm test",
    "prepare": "lefthook install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm publint && changeset publish",
    "upgrade:check": "ncu --format group",
    "upgrade": "ncu --target minor -u && pnpm install && pnpm test",
    "upgrade:major": "ncu --target latest --interactive --format group",
    "tbd": "TBD_DEV_VERSION=$(node packages/tbd/scripts/git-version.mjs) tsx packages/tbd/src/cli/bin.ts",
    "tbd:bin": "node packages/tbd/dist/bin.js",
    "test:install": "pnpm --filter get-tbd test:install",
    "test:uninstall": "pnpm --filter get-tbd test:uninstall"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "lefthook": "^2.0.15",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
